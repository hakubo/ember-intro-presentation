{{#paper-card as |card|}}
	{{#card.title as |title|}}
		{{#title.text as |text|}}
			{{#text.headline}}{{model.login}}{{/text.headline}}
		{{/title.text}}
		{{title.media size="lg" src=model.avatarUrl title=model.login}}
	{{/card.title}}
{{/paper-card}}

{{#paper-list}}
	{{#each model.githubRepositories as |repo|}}
		{{#paper-item class="md-3-line"}}
			<div class="md-list-item-text">
				<h3>{{repo.fullName}}</h3>
				<h4><a href={{repo.htmlUrl}}>{{repo.htmlUrl}}</a></h4>
				<p>{{repo.description}}</p>
			</div>
		{{/paper-item}}
	{{/each}}
{{/paper-list}}
